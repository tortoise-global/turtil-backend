# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================

PROJECT_NAME=turtil-backend
VERSION=1.0.0
ENVIRONMENT=dev
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# JWT Configuration
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# CMS Authentication
CMS_AUTO_APPROVE=true

# OTP Configuration  
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
DEV_OTP=123456

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# CORS and Host Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
ALLOWED_HOSTS=["*"]

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# ============================================================================
# DATABASE & CACHE
# ============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/turtil_db

# Redis Cache (Upstash)
UPSTASH_REDIS_URL=http://localhost:8079
UPSTASH_REDIS_TOKEN=example_token
REDIS_USER_CACHE_TTL=300
REDIS_BLACKLIST_TTL=86400


# ============================================================================
# AWS SERVICES
# ============================================================================

# AWS Core Credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1

# AWS SES (Email Service)
AWS_SES_FROM_EMAIL=
AWS_SES_REGION=

# AWS ECR (Container Registry)
ECR_ACCOUNT_ID=

# Resource Naming (Auto-derived from PROJECT_NAME + ENVIRONMENT):
# - S3 Storage Bucket: {PROJECT_NAME}-{ENVIRONMENT}-storage
# - S3 Logs Bucket: {PROJECT_NAME}-{ENVIRONMENT}-logs  
# - ECR Repository: {PROJECT_NAME}-{ENVIRONMENT}
# - Terraform State: {PROJECT_NAME}-{ENVIRONMENT}-terraform-state