# Turtil Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
PROJECT_NAME=turtil-backend
VERSION=1.0.0
ENVIRONMENT=dev
DEBUG=true
LOG_LEVEL=INFO
PORT=8000

# Database Configuration (SENSITIVE - Use GitHub Secrets)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/turtil_dev

# Security Configuration (SENSITIVE - Use GitHub Secrets)
SECRET_KEY=your-super-secret-jwt-key-here
ALGORITHM=HS256
CMS_ACCESS_TOKEN_EXPIRE_MINUTES=30
CMS_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS and Host Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
ALLOWED_HOSTS=*,localhost,127.0.0.1,0.0.0.0

# Rate Limiting Configuration
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# OTP Configuration
DEV_OTP=123456

# Upstash Redis Configuration (SENSITIVE - Use GitHub Secrets)
UPSTASH_REDIS_URL=your-upstash-redis-url
UPSTASH_REDIS_TOKEN=your-upstash-redis-token
REDIS_BLACKLIST_TTL=86400

# AWS Configuration (SENSITIVE - Use GitHub Secrets)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-south-1
AWS_SES_FROM_EMAIL=support@turtil.co
AWS_SES_REGION=ap-south-1

# S3 Configuration
S3_BUCKET_NAME=turtil-backend-dev